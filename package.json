{
  "name": "mern",
  "version": "1.0.0",
  "main": "server/app.ts",
  "scripts": {
    "start": "pm2 start npm -- start",
    "start:project": "cross-env NODE_ENV=production npm run server",
    "server": "nodemon",
    "server:build": "tsc",
    "client": "cd client && npm run start",
    "client:install": "cd client && npm i",
    "client:build": "cd client && npm run build",
    "dev": "cross-env NODE_ENV=development npm-run-all --parallel --continue-on-error server client",
    "tsc:server": "tsc",
    "tsc:client": "cd client && tsc",
    "lint": "npx eslint . --cache --ext js,jsx,ts,tsx --fix",
    "precommit": "npm-run-all --parallel --continue-on-error lint tsc:server tsc:client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AleksRap/mern.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://github.com/AleksRap/mern#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.10",
    "shortid": "^2.2.16"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^0.0.39",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.1",
    "@types/shortid": "^0.0.29",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "pm2": "^5.1.2",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      ".idea",
      "node_modules",
      ".husky"
    ],
    "watch": [
      "server"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./server/app.ts",
    "ext": "ts, js"
  }
}
