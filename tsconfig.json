{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@config": ["config"],
      "@config/*": ["config/*"],

      "@constants": ["constants"],
      "@constants/*": ["constants/*"],

      "@models": ["models"],
      "@models/*": ["models/*"],

      "@routes": ["routes"],
      "@routes/*": ["routes/*"],

      "@types": ["types"],
      "@types/*": ["types/*"]
    }
  },
}
