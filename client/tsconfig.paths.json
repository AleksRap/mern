{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],

      "@constants": ["constants"],
      "@constants/*": ["constants/*"],

      "@components": ["components"],
      "@components/*": ["components/*"],

      "@containers": ["containers"],
      "@containers/*": ["containers/*"],

      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],

      "@pages": ["pages"],
      "@pages/*": ["pages/*"],

      "@store": ["store"],
      "@store/*": ["store/*"],

      "@utils": ["utils"],
      "@utils/*": ["utils/*"],

      "@types": ["types"],
      "@types/*": ["types/*"]
    }
  },
}
